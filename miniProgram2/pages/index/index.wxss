/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}

.intro {
  margin: 40rpx 0;
  font-size: 32rpx;
  color: #333;
}

.action-buttons {
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-buttons button {
  width: 80%;
  margin: 20rpx 0;
}